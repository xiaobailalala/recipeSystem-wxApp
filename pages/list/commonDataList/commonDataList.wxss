/* pages/list/commonDataList/commonDataList.wxss */
page{
  background-color: #ffffff;
  height: 100%;
}
.page{
  height: 100%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.swiper-tab {
  padding: 0 35rpx;
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e5e3df;
  justify-content: space-between;
  position: fixed;
  width: 100%;
  background-color: #ffffff;
  z-index: 5;
  box-sizing: border-box;
}
 
.tab-item {
  width: 28%;
  text-align: center;
  font-size: 15px;
  color: #999999;
  padding: 8rpx 0;
  font-weight: bold;
}
 
.swiper {
  padding-top: 100rpx;
  background-color: #ffffff;
  height: 100%;
  display: block;
  box-sizing: border-box;
}
 
.on {
  color: #333333;
  border-bottom: 5rpx solid #333333;
}

.swiper-view{
  height: 100%;
}

.scroll-views{
  height: 100%;
}

.datalist{
  padding: 15rpx 35rpx;
  box-sizing: border-box;
  height: 215rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.datalist>image{
  width: 240rpx;
  height: 100%;
  border-radius: 15rpx;
}

.datalist>view{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding-left: 303rpx;
  padding-top: 16rpx;
  box-sizing: border-box;
}

.datatitle{
  font-weight: bold;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.datatips{
  margin-top: 10rpx;
}

.datatips>view{
  font-size: 26rpx;
  margin-right: 25rpx;
  color: #000000;
  display: inline-block;
}

.datainfo{
  margin-top: 12rpx;
}

.datainfo>view{
  display: inline-block;
  margin-right: 30rpx;
  font-size: 25rpx;
  color: #666666;
}

.datainfo>view:nth-of-type(2){
  color: #ffd000;
}

.datacount{
  font-size: 24rpx;
  color: #999999;
  position: relative;
  top: -6rpx;
}

.datacount>icon{
  position: relative;
  top: 5rpx;
}