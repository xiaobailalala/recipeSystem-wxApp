page {
    height: 100%;
    background-color: #ffffff;
    position: relative;
}

.clear {
    clear: both;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

button::after {
    border: unset;
}

.titleContainer {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    font-weight: bold;
    font-size: 32rpx;
    padding: 40rpx 0;
    border-bottom: 20rpx solid #f7f7f7;
}

.titleContainer>image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}

.listContainer>view {
    font-weight: bold;
    text-align: center;
    padding: 30rpx 0;
}

.datalist {
    padding: 15rpx 35rpx;
    box-sizing: border-box;
    height: 215rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.datalist>image {
    width: 240rpx;
    height: 100%;
    border-radius: 15rpx;
}

.datalist>view {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    padding-left: 303rpx;
    padding-top: 16rpx;
    box-sizing: border-box;
}

.datatitle {
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.datatips {
    margin-top: 10rpx;
}

.datatips>view {
    font-size: 26rpx;
    margin-right: 25rpx;
    color: #000000;
    display: inline-block;
}

.datainfo {
    margin-top: 12rpx;
}

.datainfo>view {
    display: inline-block;
    margin-right: 30rpx;
    font-size: 25rpx;
    color: #666666;
}

.datainfo>view:nth-of-type(2) {
    color: #ffd000;
}

.datacount {
    font-size: 24rpx;
    color: #999999;
    position: relative;
    top: -6rpx;
}

.datacount>icon {
    position: relative;
    top: 5rpx;
}