page{
    background-color: #ffffff;
    height: 100%;
}


.clear {
    clear: both;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.writeContainer{
    padding: 16rpx 36rpx;
    font-size: 32rpx;
}

.writeContainer>view{
    padding: 20rpx 0;
    text-align: right;
}
.writeContainer>textarea{
    box-shadow: 0 0 20rpx gainsboro inset;
    width: 100%;
    border-radius: 10rpx;
    padding: 18rpx;
    box-sizing: border-box;
}

.subBtn{
    background-color: #ffdc44;
    color: #ffffff;
    border: unset;
    line-height: unset;
    padding: 12rpx 24rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    margin: 0;
    display: inline-block;
}
button::after{
    border: unset;
}