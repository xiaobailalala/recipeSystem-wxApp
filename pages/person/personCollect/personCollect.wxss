page {
    height: 100%;
    background-color: #ffffff;
    position: relative;
}

.clear {
    clear: both;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

button::after {
    border: unset;
}

.headContainer {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.content_head {
    border-bottom: 1rpx solid #f2f1f0;
    height: 80rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
}

.content_head>view {
    box-sizing: border-box;
    height: 100%;
    line-height: 80rpx;
    margin: 0 40rpx;
    font-size: 28rpx;
    font-weight: bold;
    padding: 0 60rpx;
}

.content_head_on {
    border-bottom: 4rpx solid #000000;
}

.search_head {
    border-bottom: 1rpx solid #f2f1f0;
    height: 80rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 50rpx;
    box-sizing: border-box;
    background-color: #ffffff;
}

.search_head>view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #f7f7f7;
    border-radius: 10rpx;
    width: 100%;
    padding-left: 18rpx;
}

.search_head>view>icon {
    color: #b7b7b7;
    position: relative;
    top: -8rpx;
    width: 8%;
}

.search_head>view>input {
    width: 92%;
    height: 100%;
    font-size: 28rpx;
}

.occupiedTag {
    height: 160rpx;
}

.contentContainer {
    padding: 0 50rpx;
    padding-top: 16rpx;
}

.recipe_content>navigator {
    margin-bottom: 40rpx;
    position: relative;
}

.recipe_content>navigator>image {
    position: absolute;
    left: 0;
    top: 0;
    width: 246rpx;
    height: 200rpx;
    border-radius: 8rpx;
}

.recipe_content>navigator>view {
    padding-left: 278rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;
    height: 200rpx;
}

.recipeTitle,
.recipeMaterial,
.recipeAuthor {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.recipeTitle {
    font-size: 32rpx;
    font-weight: bold;
}

.recipeMaterial {
    font-size: 24rpx;
    margin-top: 12rpx;
}

.recipeAuthor {
    font-size: 24rpx;
    color: #888888;
    margin-top: 12rpx;
}

.recipeTag>icon{
    color: #888888;
    font-size: 24rpx;
    margin-right: 20rpx;
    position: relative;
    top: -6rpx;
}

.article_content{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.article_content>view {
    width: 47.2%;
    background-color: #ffffff;
}

.article_content>view>navigator {
    width: 100%;
    border-radius: 10rpx;
    box-shadow: 0 0 16rpx rgb(180, 180, 180);
    overflow: hidden;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
}

.article_content>view>navigator>image {
    width: 100%;
    vertical-align: top;
}

.article_content>view>navigator>view:nth-of-type(1) {
    font-size: 26rpx;
    padding: 12rpx 16rpx 0 16rpx;
    overflow: hidden !important;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-height: 104rpx;
    box-sizing: border-box;
}

.likeInfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 16rpx;
    padding: 0 16rpx;
    font-size: 20rpx;
}

.likeInfo>view {
    display: flex;
    align-items: center;
    color: #888888;
}

.likeInfo>view>image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.likeInfo>view>view {
    max-width: 150rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.likeInfo>icon {
    font-size: 20rpx;
    position: relative;
    top: -13rpx;
    color: #888888;
}