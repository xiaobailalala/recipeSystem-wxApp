}

.banner-container {
  height: 340rpx;
  position: relative;
}

.imgSwiper, .imgSwiper image {
  width: 100%;
  height: 100%;
}

.imgSwiper view {
  position: absolute;
  font-size: 15px;
  font-weight: bold;
  color: #fff;
  bottom: 0;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  background: linear-gradient(to top,rgba(0, 0, 0, 0.6),transparent);
  text-align: center;
}
