/* pages/home/index.wxss */

page {
    background-color: #ffffff;
    position: relative;
}

.clear {
    clear: both;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

button::after {
    border: unset;
}

.head-info {
    height: 96rpx;
    /* height: 8vh; */
    background-color: #ffdc44;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24rpx;
    position: fixed;
    width: 100%;
    z-index: 1000;
    box-sizing: border-box;
}

.head-info icon {
    position: relative;
    top: -6rpx;
}

.head_tools {
    display: flex;
    align-items: center;
}

.head_tools icon {
    margin-right: 30rpx;
}

.head_search {
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
    padding: 0 14rpx;
    color: #888888;
    border-radius: 10rpx;
    height: 60rpx;
    width: 480rpx;
}

.head_sysInfo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50rpx;
}

.head_search>icon {
    font-size: 26rpx;
    top: -8rpx;
}

.head_sysInfo>icon {
    font-size: 36rpx;
}

.scrollContentView {
    height: 100vh;
}

.banner-container {
    height: 340rpx;
    position: relative;
    padding-top: 96rpx;
    margin-bottom: 30rpx;
}

.imgSwiper {
    width: 100%;
    height: 100%;
}

.imgSwiperItem {
    width: 92%;
    height: 100%;
    position: relative;
    border-radius: 16rpx;
    overflow: hidden;
    left: 50%;
    margin-left: -46%;
}

.imgSwiper image {
    width: 100%;
    height: 100%;
}

.imgSwiper view {
    position: absolute;
    font-size: 30rpx;
    font-weight: bold;
    color: #fff;
    bottom: 0;
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
    text-align: center;
}

.shortcutMenu {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    flex-wrap: wrap;
}

.shortcutMenu>navigator {
    width: 25%;
    text-align: center;
    margin-bottom: 34rpx;
}

.shortcutMenu>navigator>icon {
    font-size: 60rpx;
}

.shortcutMenu>navigator>view {
    font-size: 26rpx;
    padding-top: 12rpx;
    color: #666666;
}

.activitiesOutContainer {
    padding-bottom: 50rpx;
    position: relative;
    border-top: 40rpx solid #f7f7f7;
    padding-top: 60rpx;
}

.activitiesContainer {
    white-space: nowrap;
}

.activities {
    display: inline-block;
    width: 320rpx;
    margin-right: 24rpx;
    vertical-align: top;
}

.activities:first-of-type {
    padding-left: 40rpx;
}

.activities:last-of-type {
    padding-right: 20rpx;
}

.activities:last-of-type>text {
    width: 100%;
    height: 184rpx;
    display: inline-block;
    background-color: #333333;
    border-radius: 10rpx;
    color: #ffb21a;
    display: flex;
    align-items: center;
    justify-content: center;
}

.activities>image {
    width: 100%;
    height: 184rpx;
    border-radius: 10rpx;
}

.activities>view {
    width: 100%;
    font-size: 25rpx;
    color: #666666;
    white-space: pre-wrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    min-height: 64rpx;
}

.recipeListContainer,
.groupListContainer,
.likeListContainer {
    padding: 0 40rpx;
    padding-top: 60rpx;
    padding-bottom: 50rpx;
    border-top: 40rpx solid #f7f7f7;
    position: relative;
}

.sectionTip {
    height: 60rpx;
    padding: 0 40rpx;
    position: absolute;
    top: -30rpx;
    left: 0;
    border-radius: 0 30rpx 30rpx 0;
    line-height: 60rpx;
    color: #ffffff;
    font-size: 30rpx;
}

.activitiesOutContainer .sectionTip {
    background: linear-gradient(to right, #ffdc41, #febf0c);
}

.recipeListContainer .sectionTip {
    background: linear-gradient(to right, #ff7f43, #ff3a0e);
}

.groupListContainer .sectionTip {
    background: linear-gradient(to right, #d865ff, #943bff);
}

.likeListContainer .sectionTip {
    background: linear-gradient(to right, #11befa, #138aeb);
}

.recipeItem {
    margin-bottom: 80rpx;
}

.recipeItem>view:nth-of-type(1) {
    font-size: 40rpx;
    font-weight: bold;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
}

.recipeItem>view:nth-of-type(2) {
    color: #9c9cb3;
    font-size: 26rpx;
    margin-top: 4rpx;
    display: flex;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    justify-content: space-between;
}

.recipeItemIcon>icon {
    font-size: 22rpx;
    color: #9c9cb3;
    margin-left: 20rpx;
    position: relative;
    top: -4rpx;
}

.recipeItem>image {
    margin-top: 16rpx;
    width: 100%;
    height: 340rpx;
    border-radius: 10rpx;
}

.refreshList {
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 70rpx;
    border-radius: 35rpx;
}

.recipeListContainer .refreshList {
    background: linear-gradient(to right, #ff7f43, #ff3a0e);
}

.groupListContainer .refreshList {
    background: linear-gradient(to right, #d865ff, #943bff);
}

.refreshList>icon {
    position: relative;
    top: -7rpx;
    margin-left: 10rpx;
}

.refreshRecipeListTip {
    position: fixed;
    z-index: 1000;
    width: 98%;
    border-radius: 20rpx;
    background-color: #fdce33;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    height: 90rpx;
    top: 96rpx;
    left: 50%;
    margin-left: -49%;
    transform: scale(0);
}

.groupItem {
    margin-bottom: 50rpx;
    width: 100%;
    position: relative;
    height: 230rpx;
}

.groupItem>view {
    position: absolute;
    top: 0;
    left: 0;
    padding-left: 320rpx;
    height: 100%;
}

.groupSwiper {
    height: 100%;
    width: 300rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.groupSwiper image {
    width: 100%;
    height: 100%;
}

.groupTitle{
    font-weight: bold;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    -webkit-box-orient: vertical;
    height: 94rpx;
    position: relative;
    top: -12rpx;
    font-size: 30rpx;
}

.groupTitle>text,.groupTitle>icon {
    color: #4FCFFC;
    font-size: 24rpx;
    font-weight: normal;
}

.groupTitle>icon {
    font-size: 36rpx;
    margin-right: 10rpx;
}

.groupContent {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    -webkit-box-orient: vertical;
    font-size: 24rpx;
    color: #999999;
    height: 64rpx;
}

.groupUserinfo {
    padding-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    color: #666666;

}

.groupUserinfo>image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}


.likeListMain {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.likeListMain>view {
    width: 47.2%;
    background-color: #ffffff;
}

.likeListMain>view>navigator {
    width: 100%;
    border-radius: 10rpx;
    box-shadow: 0 0 16rpx rgb(180, 180, 180);
    overflow: hidden;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
}

.likeListMain>view>navigator>image {
    width: 100%;
    vertical-align: top;
}

.likeListMain>view>navigator>view:nth-of-type(1) {
    font-size: 26rpx;
    padding: 12rpx 16rpx 0 16rpx;
    overflow: hidden !important;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-height: 104rpx;
    box-sizing: border-box;
}

.likeInfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 16rpx;
    padding: 0 16rpx;
    font-size: 20rpx;
}

.likeInfo>view {
    display: flex;
    align-items: center;
    color: #888888;
}

.likeInfo>view>image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.likeInfo>view>view {
    max-width: 150rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.likeInfo>icon {
    font-size: 20rpx;
    position: relative;
    top: -13rpx;
    color: #888888;
}

.addMaskContainer {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.95);
    z-index: 2000;
    top: 0;
    left: 0;
    opacity: 0;
}

.maskDateTime {
    height: 400rpx;
    width: 100%;
    background: linear-gradient(to bottom, #ffffff, transparent);
    padding: 30rpx 50rpx;
    position: relative;
}

.maskDateTime>view:nth-of-type(1) {
    height: 100rpx;
    font-size: 100rpx;
}

.maskDateTime>view:nth-of-type(2) {
    position: absolute;
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    padding-left: 130rpx;
    top: 36rpx;
    left: 50rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    font-size: 26rpx;
    color: #666666;
    justify-content: space-around
}

.addMaskContainer>view:nth-of-type(2) {
    padding: 0 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    bottom: 240rpx;
    width: 100%;
    box-sizing: border-box;
}

.toolsNav {
    width: 300rpx;
    height: 440rpx;
    border-radius: 20rpx;
    overflow: hidden;
    transform: scale(0.5);
    opacity: 0;
    position: relative;
}

.toolsNav>view {
    position: absolute;
    top: 36rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    color: #c2a35f;
}

.addMaskContainer>view:nth-of-type(2)>view>view {
    color: #bb766d;
}

.toolsNav>image {
    width: 100%;
    height: 100%;
}