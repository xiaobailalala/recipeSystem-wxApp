page {
    height: 100%;
    position: relative;
    background-color: #ffffff;
}

.bg {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 0;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

button::after {
    border: unset;
}

.bannerImg{
    height: 340rpx;
}

.bannerImg swiper{
    height: 100%;
}

.bannerImg navigator{
    width: 100%;
    height: 300rpx;
    padding: 0 30rpx;
}

.bannerImg image{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.bannerImg swiper-item{
    display: flex;
    align-items: center;
    justify-content: center;
}

.bannerTag{
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10rpx;
}

.bannerTag>navigator{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16rpx 28rpx;
    border-radius: 10rpx;
}

.bannerTag>navigator>image{
    width: 52rpx;
    height: 52rpx;
    margin-right: 10rpx;
}

.bannerTag>navigator:nth-of-type(1){
    background-color: #f8d4df;
    color: #9f8185;
}

.bannerTag>navigator:nth-of-type(2){
    background-color: #fdeeba;
    color: #9f907a;
}

.bannerTag>navigator:nth-of-type(3){
    background-color: #dbebe7;
    color: #87a0b3;
}

.bannerLine{
    padding: 0 30rpx;
    margin-top: 40rpx;
}

.bannerLine >view{
    border-bottom: 1rpx solid #e5e4e0;
}

.articleContainer {
    padding: 0 30rpx;
    margin-top: 40rpx;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.articleContainer>view {
    width: 47.2%;
}

.articleContainer>view>navigator {
    width: 100%;
    border-radius: 10rpx;
    box-shadow: 0 0 16rpx rgb(180, 180, 180);
    overflow: hidden;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
}

.articleContainer>view>navigator>image {
    width: 100%;
    vertical-align: top;
}

.articleContainer>view>navigator>view:nth-of-type(1) {
    font-size: 26rpx;
    padding: 12rpx 16rpx 0 16rpx;
    overflow: hidden !important;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-height: 104rpx;
    box-sizing: border-box;
}

.likeInfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 16rpx;
    padding: 0 16rpx;
    font-size: 20rpx;
}

.likeInfo>view {
    display: flex;
    align-items: center;
    color: #888888;
}

.likeInfo>view>image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.likeInfo>view>view {
    max-width: 150rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.likeInfo>icon {
    font-size: 20rpx;
    position: relative;
    top: -13rpx;
    color: #888888;
}

.fixedWriteTag{
    position: fixed;
    z-index: 10;
    bottom: 60rpx;
    background-color: #333333;
    color: #f8af1b;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16rpx 50rpx;
    font-size: 28rpx;
    border-radius: 42rpx;
    left: 50%;
    margin-left: -113rpx;
    box-shadow: 0 0 30rpx #333333;
}

.fixedWriteTag>icon{
    margin-right: 16rpx;
    position: relative;
    top: -8rpx;
    font-size: 26rpx;
}