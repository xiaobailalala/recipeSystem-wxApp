/* pages/repwd/repwd.wxss */
.con-main{
  padding-top: 100rpx;
}
.con-main>text{
  color: #333;
  font-size: 60rpx;
  font-weight: bold;
  font-family: "宋体";
  line-height: 60rpx;
  margin-bottom: 80rpx;
  text-align: center;
  display: block;
}
input{
  width: 540rpx;
  margin: 0 auto;
  font-size: 30rpx;
  color: #999;
}

.form-group{
  width: 540rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 0;
}
.form-group>text{
  padding-right: 30rpx;
  margin-right: 30rpx;
  border-right: 2rpx solid #eee;
  position: relative;
  top: 4rpx;
}
.form-group:nth-of-type(2)>input{
  width: 340rpx;
}
.form-group>button{
  font-size: 30rpx;
  width: 200rpx;
  color: #999;
  padding: 0;
  border-left: 2rpx solid #eee;
}
.form-group>button::after{
  border: none;
}
.submitbtn::after{
  border: none;
}
.submitbtn{
  font-size: 28rpx;
  color: #ffffff;
  background-color: #ddd;
  height: 74rpx;
  width: 660rpx;
  line-height: 74rpx;
  border-radius: 37rpx;
  margin-top: 80rpx;
}