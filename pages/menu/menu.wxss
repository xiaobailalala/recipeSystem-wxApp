/* pages/menu/menu.wxss */
page{
  height: 100%;
  display: flex;
  position: relative;
  background-color: #ffffff;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.left-cont{
  width: 180rpx;
  height: 100%;
  white-space:nowrap;
  background-color: #333333;
  padding: 0;
}
.left-cont button{
  border: 0;
  color: #fdfdfd;
  background-color: #333333;
  border-radius: 0;
  font-size: 16px;
  box-sizing: border-box;
  padding: 12rpx 0;
  width: 180rpx;
}
button:after{
  border: 0;
}
.left-cont button.active{
  background-color: #ffffff;
  color: #ffb31a;
  border-left: 6rpx solid #ffb31a;
  font-weight: bold;
}
.right-cont{
  height: 100%;
  background-color: #ffffff;
  white-space: nowrap;
  padding: 15rpx 20rpx;
}
.claTwo{
  position: relative;
  width: 100%;
  height: 120rpx;
  border-radius: 10rpx;
  line-height: 120rpx;
  padding-left: 90rpx;
}
.claTwo>image{
  height: 100rpx;
  vertical-align: middle;
  position: absolute;
  left: 100rpx;
  top: 50%;
  margin-top: -50rpx;
}
.menuInfo{
  margin-top: 18rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-wrap: wrap;
}
.menuInfo>navigator{
  font-size: 30rpx;
  min-width: 32%;
  text-align: center;
  border: 1px solid gainsboro;
  border-radius: 8rpx;
  margin-bottom: 18rpx;
  padding: 18rpx 20rpx;
  box-sizing: border-box;
}